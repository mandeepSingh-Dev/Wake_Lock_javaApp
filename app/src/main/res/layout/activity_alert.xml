<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlertActivity">

    <TextView
        android:id="@+id/textVirew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message to Whatsapp"
        android:textAlignment="center"

        android:textStyle="bold|italic"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="173dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textVirew"
        app:layout_constraintLeft_toLeftOf="@id/textVirew"
        app:layout_constraintRight_toRightOf="@id/textVirew"
        android:layout_marginTop="20dp"
        app:cornerRadius="30dp"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:backgroundTint="@color/whatsappGreen"
        app:strokeColor="@color/whatsappGreen"
        app:strokeWidth="2dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sendButton"
        app:layout_constraintLeft_toLeftOf="@id/textVirew"
        app:layout_constraintRight_toRightOf="@id/textVirew"
        android:layout_marginTop="5dp"
        app:cornerRadius="30dp"
        android:text=" Cancel "
        android:textAllCaps="false"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:backgroundTint="@color/whatsappGreen"
        app:strokeColor="@color/whatsappGreen"
        app:strokeWidth="2dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>